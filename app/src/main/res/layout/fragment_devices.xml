<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/indicator1"
        android:layout_marginTop="82dp"
        android:layout_centerHorizontal="true"
        android:layout_width="260dp"
        android:layout_height="260dp">

        <com.github.anastr.speedviewlib.SpeedView
            android:id="@+id/aging_rate_indicator"
            android:layout_width="260dp"
            android:layout_height="260dp"
            app:sv_trembleDegree="20"
            app:sv_startDegree="180"
            app:sv_endDegree="360"
            app:sv_indicator="KiteIndicator"
            app:sv_speedTextColor="#00ffffff"
            app:sv_unitTextColor="#00ffffff"
            app:sv_textColor="#00ffffff"
            />

        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Azat"
            android:textColor="#ffffff"/>

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/indicator2"
        android:layout_below="@+id/indicator1"
        android:layout_centerHorizontal="true"
        android:layout_width="260dp"
        android:layout_height="260dp">

        <com.github.anastr.speedviewlib.SpeedView
            android:id="@+id/vibration_rate_indicator"
            android:layout_width="260dp"
            android:layout_height="260dp"
            app:sv_trembleDegree="40"
            app:sv_startDegree="180"
            app:sv_endDegree="360"
            app:sv_indicator="KiteIndicator"
            app:sv_speedTextColor="#00ffffff"
            app:sv_unitTextColor="#00ffffff"
            app:sv_textColor="#00ffffff"
            />
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Azat"
            android:textColor="#ffffff"/>
    </RelativeLayout>


</RelativeLayout>